@model SistemaBarbearia.ViewModels.Vendas.VendaVM
@using SistemaBarbearia.Helper;
@{
    ViewBag.Title = "Cancela Horario";
    Layout = "~/Views/Shared/_Layout.cshtml";

    ViewBag.action = ViewContext.Controller.ValueProvider.GetValue("action").RawValue.ToString().ToLower();
    ViewBag.readOnly = false;


}
@using (Html.BeginForm())
{
    <div class="container">
        <div class="pull-right col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <ul class="breadcrumb breadcrumb-arrow">
                <li><a href="@Url.Action("Index")"><i class="fa fa-home"></i></a></li>
                <li class="active">Cancelar Venda</li>
            </ul>
            <div class="form-horizontal">
                <h6 class="text-right">Campos obrigatório *</h6>
                <fieldset disabled>
                    @Html.Partial("Form", Model)
                </fieldset>
            </div>
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <button type="submit" class="btn btn-success"><i class="fa fa-ban"></i>Cancelar</button>
                <a href="@Url.Action("Index")" class="btn btn-secondary" role="button" aria-pressed="true"><i class="fa fa-arrow-left"></i>Voltar</a>
            </div>
        </div>
    </div>
}
@section Scripts {
    <script type="text/javascript">
        var Action = {
            verificaNF: "@Url.Action("JsVerificaNF", "Compra")",
            getParcelas: "@Url.Action("JsGetParcelas", "CondPagamento")"
        }
    </script>
    @Scripts.Render("~/Scripts/Views/Vendas/Create.js")

}
