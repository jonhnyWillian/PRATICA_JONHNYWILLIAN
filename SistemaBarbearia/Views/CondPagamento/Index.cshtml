@model IEnumerable<SistemaBarbearia.Models.CondPagamento.CondPagamento>

@using SistemaBarbearia.Helper;
@{
    ViewBag.Title = "Condição Pagamento";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<div class="container">
    <div class="form-group">
        <div class="row">
            <h1 class="container">Consultar Condição Pagamento</h1>
        </div>
        <a class="btn btn-primary " href="@Url.Action("Create", "CondPagamento")"><i class="fa fa-plus">Adicionar</i></a>
    </div>

    <table id="listaCondPagamento" class="table table-striped table-bordered" style="width:100%">
        <thead class="table-dark">
            <tr>
                <th export="true" style="width:10%">Codigo</th>
                <th export="true" style="width:60%">Condição Pagamento</th>                
                <th export="true" style="width:10%">Opções</th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-right" style="width:10%;">
                    @Html.DisplayFor(modelItem => item.IdCondPag)
                </td>
                <td style="width:60%;">
                    @Html.DisplayFor(modelItem => item.dsCondPag)
                </td>
                <td>
                    <a title="Visualizar" class="btn btn-success btn-sm" href="@HttpUtility.UrlDecode(Url.Action("Details", new { id = item.IdCondPag }))"><i class="fa fa-eye"></i></a>
                    <a title="Editar" class="btn btn-info btn-sm" href="@HttpUtility.UrlDecode(Url.Action("Edit", new { id = item.IdCondPag }))"><i class="fa fa-pencil-square-o"></i></a>
                    <a title="Excluir" class="btn btn-danger btn-sm" href="@HttpUtility.UrlDecode(Url.Action("Delete", new { id = item.IdCondPag }))"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        }

    </table>

</div>

@section Scripts {
    @Scripts.Render("~/Scripts/Views/CondPagamentos/CondPagamento.js")
    @Scripts.Render("~/Scripts/jquery.dataTables.min.js")
    @Styles.Render("~/Content/bootstrap.min.css")
    @Styles.Render("~/Content/dataTables.bootstrap4.min.css")
    @Styles.Render("~/Content/bootstrap.css")

}