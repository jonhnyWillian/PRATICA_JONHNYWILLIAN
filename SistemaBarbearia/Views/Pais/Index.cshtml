@model IEnumerable<SistemaBarbearia.Models.Paises.Pais>

<h2 class="container-fluid">Consultar Pais</h2>
<form asp-controller="Pais" asp-action="Index">

    @using (Html.BeginForm())
    {
        <div class="container-fluid">
            <p>
                Pais:<input type="text" name="nmPais" class="form-control" style="width:60%">

                <input type="submit" value="Pesquisar" class="btn btn-primary" style="padding:0px 0px 0px 0px;" />
            </p>

        </div>
    }
    <div class="container-fluid">
        <table class="table ">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Pais</th>
                    <th>Sigla</th>
                    <th>Data Cadastro</th>
                    <th></th>
                </tr>

            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.nmPais)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.dsSigla)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.dtCadastro, "{0:dd-MM-yyyy}")
                        </td>
                        <td>
                            @Html.ActionLink("Alterar", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Visualizar", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Excluir", "Delete", new { id = item.Id })
                        </td>

                    </tr>
                }
            </tbody>
        </table>
        <div class="form-group">
            @Html.ActionLink("Novo Pais", "Create", routeValues: null, htmlAttributes: new { @class = "btn btn-success", @role = "button" })
        </div>
    </div>
</form>
