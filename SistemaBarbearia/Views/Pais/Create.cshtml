@model SistemaBarbearia.ViewModels.Paises.PaisVM



@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")

<div class="container-fluid">
    @using (Html.BeginForm())
    {
        <h4>Cadastro de Pais</h4>
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.nmPais, htmlAttributes: new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.nmPais, new { htmlAttributes = new { @class = "form-control", @style = "text-transform:uppercase ", @placeholder = "Pais", @pattern = "[0-9]+$" } })
                    @Html.ValidationMessageFor(model => model.nmPais, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.dsSigla, htmlAttributes: new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.dsSigla, new { htmlAttributes = new { @class = "form-control", @style = "text-transform:uppercase", @placeholder = "Sigla", } })
                    @Html.ValidationMessageFor(model => model.dsSigla, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Salvar" class="btn btn-success" />
                    @Html.ActionLink("Voltar", "Index", routeValues: null, htmlAttributes: new { @class = "btn btn-danger", @role = "button" })
                </div>
            </div>
        </div>
    }


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

</div>
