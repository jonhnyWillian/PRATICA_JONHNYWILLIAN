@model SistemaBarbearia.ViewModels.Paises.PaisVM
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")

<form class="form-horizontal">
    @using (Html.BeginForm())
    {
        <div class="container">
            <div><h2>Cadastro de Pais</h2></div>
            <div class="row">
                <div class="col-md-12">
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.LabelFor(model => model.nmPais, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.nmPais, new { htmlAttributes = new { @class = "form-control col-md-8", @style = "text-transform:uppercase ", @placeholder = "Pais", @pattern = "[0-9]+$" } })
                        @Html.ValidationMessageFor(model => model.nmPais, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.dsSigla, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.dsSigla, new { htmlAttributes = new { @class = "form-control col-md-2", @style = "text-transform:uppercase", @placeholder = "Sigla", } })
                        @Html.ValidationMessageFor(model => model.dsSigla, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
           
            <fieldset>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <input type="submit" value="Salvar" class="btn btn-primary" />
                        @Html.ActionLink("Voltar", "Index", routeValues: null, htmlAttributes: new { @class = "btn btn-danger me-md-2", @role = "button" })
                    </div>
            </fieldset>
        </div>
    }
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

</form>
