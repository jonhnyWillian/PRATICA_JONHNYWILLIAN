@model SistemaBarbearia.ViewModels.Fornecedores.FornecedorVM
@using SistemaBarbearia.Helper;
@{
    var action = Convert.ToString(ViewBag.Action);
    bool readOnly = Convert.ToBoolean(ViewBag.ReadOnly);
    bool isEdit = action.ToLower() == "edit";
}
@if (action != "create")
{
    <div class="form-group">
        <div class="col-md-6">
            <div class="form-group">
                @using (Html.BeginForm())
                {
                    @Html.LabelFor(e => e.Id, new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.Id, new { @class = "form-control col-md-2", readOnly = "readonly" })
                }
            </div>
        </div>
    </div>
}
<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            @Html.LabelFor(model => model.flTipoPessoa, htmlAttributes: new { @class = "control-label" })
            @Html.DropDownListFor(model => model.flTipoPessoa, SistemaBarbearia.ViewModels.Fornecedores.FornecedorVM.TipoPessoa, new { @datadrop = "select2", @class = "form-control form-control-sm col-md-6" })
            @Html.ValidationMessageFor(model => model.flTipoPessoa, "", new { @class = "text-danger" })
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <div class="row" id="lblFisica">
                <label>Fornecedor</label>
            </div>
            <div class="row" id="lblJuridica">
                <label class="row">Razão Social</label>
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.TextBoxFor(model => model.nmNome, new { @class = "form-control col-md-10" })
            @Html.ValidationMessageFor(model => model.nmNome, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <div class="row" id="lblFisicaNome">
                <label>Apelido</label>
            </div>
            <div class="row" id="lblJuridicaNome">
                <label class="row">Nome Fantasia</label>
            </div>
            @Html.TextBoxFor(model => model.dsNome, new { @class = "form-control col-md-10" })
            @Html.ValidationMessageFor(model => model.dsNome, "", new { @class = "text-danger" })
        </div>
    </div>
</div>
