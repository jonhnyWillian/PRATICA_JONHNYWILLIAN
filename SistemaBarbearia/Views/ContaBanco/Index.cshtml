@model IEnumerable<SistemaBarbearia.Models.ContasBancos.ContaBanco>
@using SistemaBarbearia.Helper;
@{
    ViewBag.Title = "Contas Bancarias";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var _action = ViewContext.Controller.ValueProvider.GetValue("action").RawValue.ToString();
    var _controller = ViewContext.Controller.ValueProvider.GetValue("controller").RawValue.ToString();
}
<div class="container">
    <ul class="breadcrumb breadcrumb-arrow">
        <li><a href="@Url.Action("Index")"><i class="fa fa-home"></i></a></li>
        <li class="active">Consultar Cargos</li>
    </ul>
    <a href="@Url.Action("Create", "ContaBanco" )" class="btn btn-primary" role="button" aria-pressed="true"> <i class="fa fa-plus"></i> Adicionar</a>

    <table id="listaContaBanco" class="table table-striped table-bordered" style="width:100%">
        <thead class="table-dark">
            <tr>
                <th export="true" style="width:10%">Codigo</th>
                <th export="true" style="width:60%">Conta</th>                
                <th export="true" style="width:10%">Opções</th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-right" style="width:10%;">
                    @Html.DisplayFor(modelItem => item.IdConta)
                </td>
                <td style="width:60%;">
                    @Html.DisplayFor(modelItem => item.dsConta)
                </td>
                <td>
                    <a title="Visualizar" class="btn btn-success btn-sm" href="@HttpUtility.UrlDecode(Url.Action("Details", new { id = item.IdConta }))"><i class="fa fa-eye"></i></a>
                    <a title="Editar" class="btn btn-info btn-sm" href="@HttpUtility.UrlDecode(Url.Action("Edit", new { id = item.IdConta }))"><i class="fa fa-pencil-square-o"></i></a>
                    <a title="Excluir" class="btn btn-danger btn-sm" href="@HttpUtility.UrlDecode(Url.Action("Delete", new { id = item.IdConta }))"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        }

    </table>

</div>

@section Scripts {
    @Scripts.Render("~/Scripts/Views/ContaBanco/ContaBanco.js")

}

