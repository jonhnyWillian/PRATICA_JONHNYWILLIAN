@model IEnumerable<SistemaBarbearia.Models.Servicos.Servico>
@using SistemaBarbearia.Helper;
@{
    ViewBag.Title = "Servico";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var _action = ViewContext.Controller.ValueProvider.GetValue("action").RawValue.ToString();
    var _controller = ViewContext.Controller.ValueProvider.GetValue("controller").RawValue.ToString();
}
<div class="container">
    <ul class="breadcrumb breadcrumb-arrow">
        <li><a href="@Url.Action("Index")"><i class="fa fa-home"></i></a></li>
        <li class="active">Consultar Serviços</li>
    </ul>
    <a href="@Url.Action("Create", "Servico" )" class="btn btn-primary" role="button" aria-pressed="true"> <i class="fa fa-plus"></i> Adicionar</a>

    <table id="listaServico" class="table table-striped table-bordered" style="width:100%">
        <thead class="table-dark">
            <tr>
                <th export="true" style="width:10%">Codigo</th>
                <th export="true" style="width:70%">Serviço</th>
                <th export="true" style="width:20%">Opções</th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-right" style="width:10%;">
                    @Html.DisplayFor(modelItem => item.IdServico)
                </td>
                <td style="width:60%;">
                    @Html.DisplayFor(modelItem => item.dsServico)
                </td>
                <td>
                    <a title="Visualizar" class="btn btn-success btn-sm" href="@HttpUtility.UrlDecode(Url.Action("Details", new { id = item.IdServico }))"><i class="fa fa-eye"></i></a>
                    <a title="Editar" class="btn btn-info btn-sm" href="@HttpUtility.UrlDecode(Url.Action("Edit", new { id = item.IdServico }))"><i class="fa fa-pencil-square-o"></i></a>
                    <a title="Excluir" class="btn btn-danger btn-sm" href="@HttpUtility.UrlDecode(Url.Action("Delete", new { id = item.IdServico }))"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        }
    </table>

</div>

@section Scripts {
    @Scripts.Render("~/Scripts/Views/Servicos/Servico.js")
    @*@Scripts.Render("~/Scripts/jquery.dataTables.min.js")
    @Styles.Render("~/Content/bootstrap.min.css")
    @Styles.Render("~/Content/dataTables.bootstrap4.min.css")
    @Styles.Render("~/Content/bootstrap.css")*@

}
