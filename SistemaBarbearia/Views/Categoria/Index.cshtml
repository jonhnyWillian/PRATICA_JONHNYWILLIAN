@model IEnumerable<SistemaBarbearia.Models.Categorias.Categoria>


<h2 class="container-fluid">Consultar Categoria</h2>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Categoria</th>
            <th>Data Cadastro</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dsCategoria)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dtCadastro, "{0:dd-MM-yyyy}")
                </td>
                <td>
                    @Html.ActionLink("Alterar", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Visualizar", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Excluir", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="form-group">
    <div class="col-lg-offset-10">
        @Html.ActionLink("Nova Categoria", "Create", routeValues: null, htmlAttributes: new { @class = "btn btn-primary", @role = "button" })
    </div>
</div>
