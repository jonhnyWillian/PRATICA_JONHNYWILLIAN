@model SistemaBarbearia.ViewModels.Agendamentos.AgendamentoVW
@using SistemaBarbearia.Helper;
@{
    var action = Convert.ToString(ViewBag.Action);
    bool readOnly = Convert.ToBoolean(ViewBag.ReadOnly);
    bool isEdit = action.ToLower() == "edit";
}

@if (action != "create")
{
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                @using (Html.BeginForm())
                {
                    @Html.LabelFor(e => e.IdModelPai, new { @class = "control-label required" })
                    @Html.TextBoxFor(model => model.IdModelPai, new { @class = "form-control col-md-2", readOnly = "readonly" })
                }
            </div>
        </div>
    </div>
}

<h3 class="heading no-margin">Horário</h3>
<div class="bs-callout bs-callout-primary">
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                @Html.EditorFor(model => model.Funcionario, "Funcionarios/Select", new { Disabled = false, Required = true })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4">
            @Html.LabelFor(model => model.dtAgendamento, new { @class = "required" })
            <div class="input-group-append">

                @Html.TextBoxFor(model => model.dtAgendamento, "{0:dd/MM/yyyy}", new { @class = "form-control datepicker date" })
                <span class="fa fa-calendar input-group-text" style="font-size:23px"></span>
            </div>
            @Html.ValidationMessageFor(model => model.dtAgendamento, null, new { @class = "text-danger" })
        </div>

        <div class="col-sm-4">
            <div class="form-group">
                @Html.LabelFor(model => model.flhoraAgendamento, new { @class = "required" })
                <div class="input-group-append">
                    @Html.DropDownListFor(model => model.flhoraAgendamento, SistemaBarbearia.ViewModels.Agendamentos.AgendamentoVW.Horario, new { @datadrop = "select2", @class = "form-control  col-md-6" })
                    <span class="fa fa-clock-o input-group-text" style="font-size:23px"></span>
                </div>
                @Html.ValidationMessageFor(model => model.flhoraAgendamento, "", new { @class = "text-danger" })
            </div>
        </div>
        @if (action != "create")
        {
            <div class="col-sm-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.flSituação, new { @class = "required" })
                    @Html.DropDownListFor(model => model.flSituação, SistemaBarbearia.ViewModels.Agendamentos.AgendamentoVW.Situação, new { @datadrop = "select2", @class = "form-control  col-md-6" })
                    @Html.ValidationMessageFor(model => model.flSituação, "", new { @class = "text-danger" })
                </div>
            </div>
        }
    </div>


</div>

<div class="bs-callout bs-callout-primary">
    <h3 class="heading no-margin">Serviço - Cliente</h3>
    <div id="divAddServico">
        <div class="form-row">
            @Html.EditorFor(model => model.Servico, "Servicos/Select", new { Disabled = false, Required = true, flValorServico = "N" })
        </div>

        <div class="form-row">
            @Html.EditorFor(model => model.Cliente, "Clientes/Select", new { @disabled = readOnly })
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        @Html.LabelFor(model => model.dtCadastro, htmlAttributes: new { @class = "control-label" })
        <div class="input-group-append">
            <div class="input-group-addon input-group-text"><i class="fa fa-calendar"></i></div>
            @Html.TextBoxFor(model => model.dtCadastro, "{0:dd/MM/yyyy}", new { @class = "form-control datepicker date", disabled = true })
            @Html.ValidationMessageFor(model => model.dtCadastro, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="col-md-6">
        @Html.LabelFor(model => model.dtUltAlteracao, htmlAttributes: new { @class = "control-label" })
        <div class="input-group-append">
            <div class="input-group-addon input-group-text"><i class="fa fa-calendar"></i></div>
            @Html.TextBoxFor(model => model.dtUltAlteracao, "{0:dd/MM/yyyy}", new { @class = "form-control datepicker date", disabled = true })
            @Html.ValidationMessageFor(model => model.dtUltAlteracao, "", new { @class = "text-danger" })
        </div>
    </div>
</div>
