@model IEnumerable<SistemaBarbearia.Models.FormaPagamentos.FormaPagamento>
@{
    ViewBag.Title = "FormaPagamento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="form-group">
        <div class="row">
            <h1 class="container">Consultar Forma Pagamento</h1>
        </div>
        <a class="btn btn-primary" href="@Url.Action("Create", "FormaPagamento" )"><i class="fa fa-plus">Adicionar</i></a>
    </div>

    <table id="listaFormaPagamento" class="table table-striped table-bordered" style="width:100%">
        <thead class="table-dark">
            <tr>
                <th export="true" style="width:10%">Codigo</th>
                <th export="true" style="width:60%">Forma Pagamento</th>
                <th export="true" style="width:10%">Opções</th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td style="width:10%;">
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td style="width:60%;">
                    @Html.DisplayFor(modelItem => item.dsFormaPagamento)
                </td>

                <td>
                    <a title="Visualizar" class="btn btn-success btn-sm" href="@HttpUtility.UrlDecode(Url.Action("Details", new { id = item.Id }))"><i class="fa fa-eye"></i></a>
                    <a title="Editar" class="btn btn-info btn-sm" href="@HttpUtility.UrlDecode(Url.Action("Edit", new { id = item.Id }))"><i class="fa fa-pencil-square-o"></i></a>
                    <a title="Excluir" class="btn btn-danger btn-sm" href="@HttpUtility.UrlDecode(Url.Action("Delete", new { id = item.Id }))"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        }

    </table>

</div>

@section Scripts {
    @Scripts.Render("~/Scripts/Views/FormaPagamentos/FormaPagamento.js")
    @Scripts.Render("~/Scripts/jquery.dataTables.min.js")
    @Styles.Render("~/Content/bootstrap.min.css")
    @Styles.Render("~/Content/dataTables.bootstrap4.min.css")
    @Styles.Render("~/Content/bootstrap.css")
}
