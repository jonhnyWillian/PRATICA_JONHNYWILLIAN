<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/css/select2-bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/select2.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="~/Content/font-awesome.min.css">
    <script src="~/Scripts/sSelect.js"></script>
    <script src="~/Scripts/Functions.js"></script>
    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/jquery.dataTables.js"></script>
    <script src="~/Scripts/dataTables.bootstrap4.min.js"></script>

    <title>BARBEARIA</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" @Html.ActionLink("BARBEARIA", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Localidades
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" @Html.ActionLink("Paises", "Index", "Pais")</a>


                        <a class="dropdown-item" @Html.ActionLink("Estados", "Index", "Estado")</a>

                        <a class="dropdown-item" @Html.ActionLink("Cidades", "Index", "Cidade")</a>

                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" @Html.ActionLink("Serviços", "Index", "Servico")</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" @Html.ActionLink("Categorias", "Index", "Categoria")</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" @Html.ActionLink("Produtos", "Index", "Produto")</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" @Html.ActionLink("Cargos", "Index", "Cargo")</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Pessoa
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" @Html.ActionLink("Cliente", "Index", "Cliente")</a>

                        <a class="dropdown-item" @Html.ActionLink("Fornecedor", "Index", "Fornecedor")</a>

                        <a class="dropdown-item" @Html.ActionLink("Funcionario", "Index", "Funcionario")</a>

                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Pagamentos
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" @Html.ActionLink("Forma de Pagamento", "Index", "FormaPagamento")</a>
                    </div>
                </li>
                <li class="nav-item">

                </li>
                @*<li class="nav-item">
            <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a>
        </li>*@
            </ul>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    
    @Html.RenderScriptBlocks()
    @RenderSection("scripts", required: false)
</body>
</html>
