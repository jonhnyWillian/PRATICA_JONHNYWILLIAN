            @Html.LabelFor(model => model.Fisica.nrRG, htmlAttributes: new { @class = "control-label required" })
            @Html.TextBoxFor(model => model.Fisica.nrRG, new {  @class = "form-control  col-md-10", @autofocus = "autofocus", @placeholder = "RG", maxlength = "9" })
