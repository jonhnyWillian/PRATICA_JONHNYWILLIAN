            @Html.ValidationMessageFor(model => model.dsEmail, "", new { @class = "text-danger" })
        </div>
    </div>
</div>
<div class="form-group">
    <div class="row">
        <div class="col-md-4 fisica"  >
            @Html.LabelFor(model => model.Fisica.nrCPF, htmlAttributes: new { @class = "control-label required" })
            @Html.TextBoxFor(model => model.Fisica.nrCPF, new { id = "cpf", @class = "form-control  col-md-10", @autofocus = "autofocus", @placeholder = "CPF" })
            @Html.ValidationMessageFor(model => model.Fisica.nrCPF, "", new { @class = "text-danger", maxlength = "14" })
