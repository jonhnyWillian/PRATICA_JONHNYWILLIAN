@model IEnumerable<SistemaBarbearia.Models.Produtos.Produto>
@using SistemaBarbearia.Helper;
@{
    ViewBag.Title = "Produto";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var _action = ViewContext.Controller.ValueProvider.GetValue("action").RawValue.ToString();
    var _controller = ViewContext.Controller.ValueProvider.GetValue("controller").RawValue.ToString();
}
<div class="container">
    <ul class="breadcrumb breadcrumb-arrow">
        <li><a href="@Url.Action("Index")"><i class="fa fa-home"></i></a></li>
        <li class="active">Consultar Produtos</li>
        @Html.RenderFlashMessage()
    </ul>
    <a href="@Url.Action("Create", "Produto" )" class="btn btn-primary" role="button" aria-pressed="true"> <i class="fa fa-plus"></i> Adicionar</a>

    <table id="listaProduto" class="table table-striped table-bordered" style="width:100%">
        <thead class="table-dark">
            <tr>
                <th export="true" style="width:10%">Codigo</th>
                <th export="true" style="width:70%">Produto</th>
                <th export="true" class="text-right" style="width:20%">Valor Venda</th>
                <th export="true" style="width:20% ">Opções</th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-right" style="width:10%;">
                    @Html.DisplayFor(modelItem => item.IdProduto)
                </td>
                <td style="width:50%;">
                    @Html.DisplayFor(modelItem => item.dsProduto)
                </td>
                <td class="text-right" style="width:20%;">
                    @Html.DisplayFor(modelItem => item.vlVenda)
                </td>
                <td>
                    <a title="Visualizar" class="btn btn-success btn-sm" href="@HttpUtility.UrlDecode(Url.Action("Details", new { id = item.IdProduto }))"><i class="fa fa-eye"></i></a>
                    <a title="Editar" class="btn btn-info btn-sm" href="@HttpUtility.UrlDecode(Url.Action("Edit", new { id = item.IdProduto }))"><i class="fa fa-pencil-square-o"></i></a>
                    <a title="Excluir" class="btn btn-danger btn-sm" href="@HttpUtility.UrlDecode(Url.Action("Delete", new { id = item.IdProduto }))"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        }
    </table>

</div>

@section Scripts {
    @Scripts.Render("~/Scripts/Views/Produtos/Produto.js")
    

}
