@model IEnumerable<SistemaBarbearia.Models.Cargos.Cargo>
@using SistemaBarbearia.Helper;
@{
    ViewBag.Title = "Cargo";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var _action = ViewContext.Controller.ValueProvider.GetValue("action").RawValue.ToString();
    var _controller = ViewContext.Controller.ValueProvider.GetValue("controller").RawValue.ToString();
}
<div class="container">
    <div class="form-group">
        <div class="row">
            <h1 class="container">Consultar Cargo</h1>
        </div>
        <a class="btn btn-primary" href="@Url.Action("Create", "Cargo" )"><i class="fa fa-plus">Adicionar</i></a>
    </div>

    <table id="listaCargo" class="table table-striped table-bordered" style="width:100%">
        <thead class="table-dark">
            <tr>
                <th export="true" style="width:10%">Codigo</th>
                <th export="true" style="width:60%">Cargo</th>
                <th export="true" style="width:10%">Opções</th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td style="width:10%;">
                    @Html.DisplayFor(modelItem => item.IdCargo)
                </td>
                <td style="width:60%;">
                    @Html.DisplayFor(modelItem => item.dsCargo)
                </td>                
                <td>
                    <a title="Visualizar" class="btn btn-success btn-sm" href="@HttpUtility.UrlDecode(Url.Action("Details", new { id = item.IdCargo }))"><i class="fa fa-eye"></i></a>
                    <a title="Editar" class="btn btn-info btn-sm" href="@HttpUtility.UrlDecode(Url.Action("Edit", new { id = item.IdCargo }))"><i class="fa fa-pencil-square-o"></i></a>
                    <a title="Excluir" class="btn btn-danger btn-sm" href="@HttpUtility.UrlDecode(Url.Action("Delete", new { id = item.IdCargo }))"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        }

    </table>

</div>

@section Scripts {
    @Scripts.Render("~/Scripts/Views/Cargos/Cargo.js")
    @Scripts.Render("~/Scripts/jquery.dataTables.min.js")
    @Styles.Render("~/Content/bootstrap.min.css")
    @Styles.Render("~/Content/dataTables.bootstrap4.min.css")
    @Styles.Render("~/Content/bootstrap.css")

}

