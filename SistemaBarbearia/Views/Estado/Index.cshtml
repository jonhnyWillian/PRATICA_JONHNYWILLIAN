@model IEnumerable<SistemaBarbearia.Models.Paises.Estado>


<h2 class="container-fluid">Consultar Estado</h2>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Estado</th>
            <th>UF</th>
            <th>Data Cadastro</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nmEstado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dsUF)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dtCadastro)
                </td>
                <td>
                    @Html.ActionLink("Alterar", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Visualizar", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Excluir", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="form-group">
    <div class="col-lg-offset-10">
        @Html.ActionLink("Novo Estado", "Create", routeValues: null, htmlAttributes: new { @class = "btn btn-primary", @role = "button" })
    </div>
</div>
